<div class="container">
    <div class="row">

        {{#if posts.length}}
        <section class="col">
            <div class="dashboard-heading border-bottom border-2">
                <h3>My Posts</h3>
            </div>
            <ol>
                {{#each posts as |post|}}
                <li>
                    {{> post-info post}}
                    <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
                </li>
                {{/each}}
            </ol>
        </section>
        {{/if}}
    </div>
</div>

<section>
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-content">Post</label>
            <input id="post-content" name="post-content" />
        </div>
        <button type="submit">Create</button>
    </form>
</section>

<script src="/javascript/add-post.js"></script>