<article class="post">
    <div class="title">
        <a href="/post/{{id}}">
            <h3>{{title}}</h3>
        </a>
        <p>{{post_content}}</p>
    </div>
    <div class="meta">
        <span>Posted on {{format_date created_at}} by {{user.username}}</span>
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>