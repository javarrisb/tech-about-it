<article>
    <a href="/dashboard">&larr; Back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form container-fluid">
        <div class="row post-title">
            <input name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div class="row post-content mb-2">
            <input name="post-content" type="text" value="{{post.post_content}}" />
        </div>
        <div class="mb-2">
            Created by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <div class="mb-4">
            <button type="submit">Save post</button>
            <button type="button" class="delete-post-btn">Delete post</button>
        </div>
    </form>
</article>

{{#if loggedIn}}
<form class="comment-form container border-bottom border-1">
    <div class="row mb-4">
        <textarea name="comment-body"></textarea>
    </div>

    <div class="mb-4">
        <button type="submit">Add Comment</button>
    </div>
</form>
{{/if}}

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>